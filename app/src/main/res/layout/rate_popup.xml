<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal">

    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/rootLayout"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_parent_rounded_corner"
        android:orientation="horizontal">


        <com.sackcentury.shinebuttonlib.ShineButton
            android:id="@+id/po_image1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@android:color/darker_gray"
            app:allow_random_color="false"
            app:btn_color="@android:color/darker_gray"
            app:big_shine_color="#5dcdb9"
            app:btn_fill_color="#5dcdb9"
            app:click_animation_duration="0"
            app:enable_flashing="false"
            app:shine_animation_duration="0"
            app:shine_count="8"
            app:shine_turn_angle="10"
            app:siShape="@raw/star"
            app:small_shine_color="#CC9999"
            app:small_shine_offset_angle="20"/>

        <com.sackcentury.shinebuttonlib.ShineButton
            android:id="@+id/po_image2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:src="@android:color/darker_gray"
            app:allow_random_color="false"
            app:btn_color="@android:color/darker_gray"
            app:big_shine_color="#5dcdb9"
            app:btn_fill_color="#5dcdb9"
            app:click_animation_duration="0"
            app:enable_flashing="false"
            app:shine_animation_duration="0"
            app:shine_count="8"
            app:shine_turn_angle="10"
            app:siShape="@raw/star"
            app:small_shine_color="#CC9999"
            app:small_shine_offset_angle="20"/>

        <com.sackcentury.shinebuttonlib.ShineButton
            android:id="@+id/po_image3"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:src="@android:color/darker_gray"
            app:allow_random_color="false"
            app:btn_color="@android:color/darker_gray"
            app:big_shine_color="#5dcdb9"
            app:btn_fill_color="#5dcdb9"
            app:click_animation_duration="0"
            app:enable_flashing="false"
            app:shine_animation_duration="0"
            app:shine_count="8"
            app:shine_turn_angle="10"
            app:siShape="@raw/star"
            app:small_shine_color="#CC9999"
            app:small_shine_offset_angle="20"/>

        <com.sackcentury.shinebuttonlib.ShineButton
            android:id="@+id/po_image4"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:src="@android:color/darker_gray"
            app:allow_random_color="false"
            app:btn_color="@android:color/darker_gray"
            app:big_shine_color="#5dcdb9"
            app:btn_fill_color="#5dcdb9"
            app:click_animation_duration="0"
            app:enable_flashing="false"
            app:shine_animation_duration="0"
            app:shine_count="8"
            app:shine_turn_angle="10"
            app:siShape="@raw/star"
            app:small_shine_color="#CC9999"
            app:small_shine_offset_angle="20"/>

        <com.sackcentury.shinebuttonlib.ShineButton
            android:id="@+id/po_image5"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:src="@android:color/darker_gray"
            app:allow_random_color="false"
            app:btn_color="@android:color/darker_gray"
            app:big_shine_color="#5dcdb9"
            app:btn_fill_color="#5dcdb9"
            app:click_animation_duration="0"
            app:enable_flashing="false"
            app:shine_animation_duration="0"
            app:shine_count="8"
            app:shine_turn_angle="10"
            app:siShape="@raw/star"
            app:small_shine_color="#CC9999"
            app:small_shine_offset_angle="100"/>
    </LinearLayout>
</RelativeLayout>
